{
  "name": "expressjs-architecture-poc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env -- ts-node-dev --respawn --transpile-only --exit-child --watch src src/server.ts",
    "test": "dotenv -e .env.test -- jest --runInBand",
    "prisma:migrate:save": "prisma migrate dev --preview-feature --create-only",
    "prisma:migrate:run": "prisma migrate deploy --preview-feature",
    "prisma:migrate:run:test": "dotenv -e .env.test -- prisma migrate deploy --preview-feature",
    "prisma:migrate:reset": "prisma migrate reset --preview-feature",
    "prisma:migrate:reset:test": "dotenv -e .env.test -- prisma migrate reset --preview-feature",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "prisma:format": "prisma format",
    "lint": "tsc --project tsconfig.json --noEmit && eslint \"{src,apps,libs,test}/**/*.ts\" --color --max-warnings=0"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.9.2",
    "@sendgrid/mail": "^7.6.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv-cli": "^5.0.0",
    "eventemitter2": "^6.4.5",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash.snakecase": "^4.1.6",
    "@types/node": "^16.10.3",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/pluralize": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "prisma": "^3.9.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.controller.ts",
      "**/*.service.ts",
      "**/*.resolver.ts",
      "**/*.factory.ts",
      "**/utils/*.ts",
      "**/events/*.ts",
      "**/*.validator.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testTimeout": 15000
  }
}
